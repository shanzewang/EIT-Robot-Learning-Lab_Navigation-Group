define floorplan model
(
  # sombre, sensible, artistic
  color "gray30"

  # most maps will need a bounding box
  boundary 0

  gui_nose 0
  gui_grid 0

  gui_outline 1
  gripper_return 0
  fiducial_return 0
  ranger_return 1
)

# set the resolution of the underlying raytrace model in meters
resolution 0.005
threads 8
interval_sim 100  # simulation timestep in milliseconds
speedup 5
window
( 
  #size [ 745.000 745.000 ] 
  show_data 1
  show_footprints 0
  #rotate [ 0.000 0.000 ]
  #scale 28.806 
)


# load an environment bitmap
floorplan
( 
  name "willow"
  bitmap "./Obstacles3.jpg"
  size [8.0 8.0 1.0]
  pose [ 0.000 0.000 0 00.000 ]
)

# throw in a robot
pr2( pose [ 0 0 0.0 90.000 ] name "pr2" color "green")
